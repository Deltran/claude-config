{
  "enabledPlugins": {
    "superpowers@claude-plugins-official": true,
    "impeccable@impeccable": true
  },
  "skipDangerousModePermissionPrompt": true,
  "env": {
    "CLAUDE_CODE_EFFORT_LEVEL": "medium"
  },
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/log-prompt.sh",
            "timeout": 5
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/load-history.sh",
            "timeout": 5
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "/home/deltran/code/claude-tavern/bridge/hooks/tavern-hook.sh",
            "timeout": 5,
            "async": true
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "/home/deltran/code/claude-tavern/bridge/hooks/tavern-hook.sh",
            "timeout": 5,
            "async": true
          }
        ]
      }
    ],
    "SubagentStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "/home/deltran/code/claude-tavern/bridge/hooks/tavern-hook.sh",
            "timeout": 5,
            "async": true
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "/home/deltran/code/claude-tavern/bridge/hooks/tavern-hook.sh",
            "timeout": 5,
            "async": true
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "/home/deltran/code/claude-tavern/bridge/hooks/tavern-hook.sh",
            "timeout": 5,
            "async": true
          }
        ]
      }
    ]
  }
}
